{
  "mcpServers": {
    "godot": {
      "type": "stdio",
      "command": "node",
      "args": ["tools/mcp/godot-mcp/build/index.js"],
      "env": {
        "DEBUG": "true",
        "GODOT_PATH": "C:\\Program Files\\Godot"
      }
    },
    "gdscript": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "mcp-gdscript"]
    },
    "godot_docs": {
      "type": "http",
      "url": "https://godot-docs-mcp.j2d.workers.dev/mcp"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "D:\\MyWork\\ゲーム開発\\Godot\\GDQuest\\2d\\l2dfz_0.51.2_win\\projects\\GameGallery"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    }
  }
}